<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/sMarca"
        android:layout_alignParentTop="true"
        android:layout_marginTop="30dp"
         />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/sModelo"
        android:layout_below="@+id/sMarca"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sMarca"
        android:layout_alignEnd="@+id/sMarca" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/sTipoCombustivel"
        android:layout_below="@+id/sModelo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sAno"
        android:layout_alignEnd="@+id/sAno" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:id="@+id/sAno"
        android:layout_below="@+id/sTipoCombustivel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sModelo"
        android:layout_alignEnd="@+id/sModelo" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbFunilariaPintura"
        android:layout_below="@+id/textView"
        android:layout_marginBottom="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Motor"
        android:id="@+id/textView2"
        android:layout_below="@+id/sbFunilariaPintura"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Funilaria e pintura"
        android:id="@+id/textView"
        android:layout_marginTop="80dp"
        android:layout_below="@+id/sModelo"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbMotor"
        android:layout_below="@+id/textView2"
        android:layout_marginBottom="12dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:indeterminate="false" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Parte mecÃ¢nica e inteiror"
        android:id="@+id/textView3"
        android:layout_below="@+id/sbMotor"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <SeekBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/sbMecanicaInterior"
        android:layout_below="@+id/textView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/sbMotor"
        android:layout_alignEnd="@+id/sbMotor"
        android:indeterminate="false" />

    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:text="CALCULAR"
        android:id="@+id/btnCalcular"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />




</RelativeLayout>
